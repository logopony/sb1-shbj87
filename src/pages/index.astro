---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Private Custom ChatGPT for Your Business">
  <div class="absolute w-full pointer-events-none" style="top: 100px">
    <svg class="w-full h-[1600px]" viewBox="0 0 800 800" preserveAspectRatio="xMidYMid slice">
      <defs>
        <radialGradient id="gradient1" cx="50%" cy="50%" r="50%" fx="50%" fy="50%">
          <stop offset="0%" stop-color="#4ead87" stop-opacity="0.3"></stop>
          <stop offset="100%" stop-color="#4ead87" stop-opacity="0"></stop>
        </radialGradient>
      </defs>
      <circle cx="400" cy="400" r="400" fill="url(#gradient1)">
        <animate attributeName="cx" values="400;420;400" dur="20s" repeatCount="indefinite"></animate>
        <animate attributeName="cy" values="400;380;400" dur="23s" repeatCount="indefinite"></animate>
      </circle>
    </svg>
  </div>

  <main class="min-h-screen bg-gradient-to-b from-gray-50 to-white">
    <Navigation />
    
    <!-- Hero Section -->
    <div class="relative pt-32 pb-16 max-w-3xl mx-auto px-4 text-center">
      <div class="mb-12">
        <h1 class="text-3xl lg:text-5xl font-bold mb-6 text-dark">
          A private ChatGPT for your company's knowledge base.
        </h1>
        <p class="text-xl text-gray-600 mb-8">
          Streamline your workflow with intelligent, secure access to critical data. Cut expenses and boost team efficiency with AI chatbots for business.
        </p>
        <div class="space-y-4">
          <a href="/app" class="inline-block px-8 py-4 bg-black text-white font-medium rounded-lg hover:from-purple-600 hover:to-pink-600 transition-all transform hover:scale-105">
            Build your Chatbot â†’
          </a>
        </div>
      </div>

      <!-- Hero Image -->
      <div class="relative w-screen -mx-[50vw] left-1/2 right-1/2">
        <div class="max-w-[1200px] mx-auto px-4">
          <div class="w-full aspect-[3/2] bg-gray-100 border border-gray-200 rounded-2xl overflow-hidden shadow-lg">
            <div class="w-full h-full flex items-center justify-center text-gray-500">
              Image Placeholder
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Rest of the sections... -->
    
    <Footer />
  </main>
</Layout>